{
    "builders": [
      {
        "type": "amazon-ebs",
        "region": "us-east-2",
        "source_ami": "ami-01e36b7901e884a10",
        "instance_type": "t2.micro",
        "ssh_username": "centos",
        "ami_name": "packer-example {{timestamp}}"
      }
    ],
    "provisioners": [
        {
      "type": "file",
         "source": "files/welcome.txt",
          "destination": "/tmp"
           },
        {
      "type": "shell",
         "inline":[
            "sudo yum install telnet -y",
            "sudo yum install wget -y"
           ]
         },
      {
      "type": "shell",
          "script": "files/example.sh"
          }
       ]
  }
  